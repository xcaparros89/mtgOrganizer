<!-- myPage/myDecks.hbs -->
<div class="row pattern-angel avoidSticked" style="min-height:90vh">
    <div class="container-fluid">
        <div class="row pattern-dark">
            <div class="col-xs-12">
                <h2>My Decks</h2>
            </div>
        </div>
            <!-- ============== DIVIDER ============== -->
            <div class="Divider">
                <hr class="Divider-rule">
            </div>
        <!-- ============== COLLECTION CARDS (NEEDS TO BE FILTERED) ============== -->
        <div class="row text-center" style="margin: 35px auto 0 auto">
            <form id="form" action="/makeDeck" method="POST">
                <input class="hidden" type='text' name='title' value="My New Deck">
                <input class="hidden" type='text' name='description' value="Deck description">
                <a href="javascript:$('#form').submit();" class="button-game btn-new-deck">
                    <span class="button-game-bg-left"></span>
                    <span class="button-game-bg-mid">
                    <span>New Deck</span>
                    </span> 
                    <span class="button-game-bg-right"></span>
                </a>
            </form>
        </div>
        <div class="container">
       {{#each myDecks}}
            <article class="col-xs-12 col-sm-6 col-md-4 box features-item thumbnail-100 img-bg" data-toggle="modal" data-target="#shop-modal">
            <a href="search/deck/{{_id._id}}">
                <img class="features-img" src="{{imgPath}}" alt="{{_id.name}}" data-id="{{_id._id}}" data-name="{{_id.name}}" data-img="{{_id.image_uris.png}}" data-type="{{_id.type_line}}" data-power="{{_id.power}}" data-toughness="{{_id.toughness}}" data-buy="https://www.cardmarket.com/es/Magic/Products/Search?searchString={{_id.name}}" data-setname="{{_id.set_name}}" data-count="{{count}}">
                <div class="centered-deck">
                    <p class="">{{title}}</p>
                    <div class='mana-cost text-center'>{{colors}}</div>
                </div>
            </a>
            </article>
        {{/each}}
        </div>

        </div>
    </div>
</div>
