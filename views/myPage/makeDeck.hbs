            <div class="col-xs-12 items-container bottom-wrapper" style="margin-bottom:25px">
                <p>&nbsp;</p>
            </div>
        <!-- /INNER DIVIDER -->
            <form id="update-info" class="contact-form" action="/makeDeck/modify/text" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xs-12 col-sm-6"><label class="deck" for="title">Deck title</label><input class="title" name='title' type='text' value="{{newDeck.title}}" style="text-align:left;"></div>
                <div class="col-xs-12 col-sm-6"><label class="deck" for="title">Deck custom image</label><input style="display:inline" type="file" name="photo"></div>
            </div>
                <label class="deck" for="title">Description</label>
                <textarea name="description" placeholder="" rows="4" cols="">{{newDeck.description}}</textarea>
                    <div class="row text-center">
                                <a href="javascript:$('#update-info').submit();"  class="button-game btn-search" style="max-width:180px;min-width:140px">
                                    <span class="button-game-bg-left"></span>
                                    <span class="button-game-bg-mid">
                                        <span>Update</span>
                                    </span> 
                                    <span class="button-game-bg-right"></span>
                                </a>
                    </div>
            </form>
            <p>{{newDeck.mistakes}}</p>
        </div>
        <!-- INNER DIVIDER -->
            <div class="col-xs-12 items-container bottom-wrapper" style="margin-bottom:25px">
                <p>&nbsp;</p>
            </div>
        <!-- /INNER DIVIDER -->
        <!-- ===== START SAVE BTN ===== -->
        <div class="container mw750">
                    <div class="col-xs-12 text-center">
                        <form id="save"action="/makeDeck/save" method="GET">
                            <div class="row text-center">
                                <a href="javascript:$('#save').submit();"  class="button-game btn-search" style="max-width:322px;min-width:140px">
                                    <span class="button-game-bg-left"></span>
                                    <span class="button-game-bg-mid">
                                        <span>Save</span>
                                    </span> 
                                    <span class="button-game-bg-right"></span>
                                </a>
                            </div>
                        </form>
                    </div>
                <div class="row">
                    <hr class="invisible">
                </div>
        </div>
