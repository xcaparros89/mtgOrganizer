        <div class="col-xs-12">
        <form action="/makeDeck/modify/text" method="POST" enctype="multipart/form-data">
            <input name='title' type='text' value="{{newDeck.title}}">
            <input name='description' type='text' value="{{newDeck.description}}">
            <p>Deck image:<span><input type="file" name="photo"></span></p>
            <button type='submit'>Change</button>
        </form>
        <p>{{newDeck.mistakes}}</p>
        </div>
        <!-- INNER DIVIDER -->
        <div class="row">
            <div class="col-xs-12 items-container bottom-wrapper" style="margin-bottom:25px">
                <p>&nbsp;</p>
            </div>
        </div>
        <!-- /INNER DIVIDER -->
        <!-- ===== START DECK CARDS HEADER =====-->
        <div class="col-xs-12">
            <p class="innerTitle">Main deck</p>
            <hr class="invisible">
        </div>
